<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Penjualan">

    <LinearLayout
        app:layout_constraintBottom_toTopOf="@id/top"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#304ffe">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Penjualan"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/err_ap"
        android:layout_above="@id/loading"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Gagal Memuat"
        android:visibility="invisible" />

    <Button
        android:id="@+id/reload_ap"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:onClick="reload"
        android:text="Coba Lagi"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_above="@id/tambah_pembelian2"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/isi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="#304ffe">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Nota"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="15sp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/input_no_nota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="No Nota"/>

                        <TextView
                            android:id="@+id/input_tgl_nota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="Tanggal"/>

                        <TextView
                            android:id="@+id/input_waktu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="Waktu"/>

                        <TextView
                            android:id="@+id/input_kasir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="Kasir"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:background="#304ffe">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Informasi Pelanggan"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <Spinner
                            android:id="@+id/input_nama_pelanngan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dialog"/>

                        <TextView
                            android:id="@+id/input_no_hp"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="15sp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="No Telp / Hp"/>

                        <TextView
                            android:id="@+id/input_alamat"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="15sp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginVertical="5dp"
                            android:text="Alamat"/>

                        <TextView
                            android:id="@+id/input_info_lain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="15sp"
                            android:layout_marginVertical="5dp"
                            android:text="Info Lain"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#304ffe"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daftar Barang"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/error"
                            android:gravity="center"
                            android:layout_below="@id/recyclerView"
                            android:layout_width="match_parent"
                            android:text="TIDAK ADA DATA"
                            android:layout_marginVertical="5dp"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:layout_height="match_parent" />

                        <android.support.v7.widget.RecyclerView
                            android:visibility="gone"
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="2dp"
                            android:layout_marginHorizontal="15dp"></android.support.v7.widget.RecyclerView>

                        <Button
                            android:layout_marginHorizontal="10dp"
                            android:id="@+id/tambah_pembelian"
                            android:layout_below="@id/error"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tambah Barang"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/tambah_pembelian2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Tambah Penjualan"
        android:textColor="#fff"
        android:background="#304ffe"/>
</RelativeLayout>